<%= form_for reporter do |f| %>
    <% if !reporter.errors.empty? %>
        <ul>
          <% reporter.errors.full_messages.each do |m| %>
              <li><%= m %></li>
          <% end %>
        </ul>
    <% end %>
    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email %>
      <br/>
      <%= f.email_field :email %>
    </div>
    <div class="field">
      <%= f.label :phone %>
      <br/>
      <%= f.phone_field :phone %>
    </div>
    <div class="field">
      <%= f.label :organization %>
      <br/>
      <%= f.text_field :organization %>
    </div>
    <div class="field">
      <%= f.label :position %>
      <br/>
      <%= f.text_field :position %>
    </div>
    <div class="field">
      <%= f.label :notes %>
      <br/>
      <%= f.text_area :notes %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "#{reporter.persisted? ? 'Update Reporter' : 'Save Reporter'}" %>
      <%= link_to 'Cancel', reporters_path %>
    </div>
<% end %>